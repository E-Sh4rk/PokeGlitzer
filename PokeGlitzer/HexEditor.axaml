<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokeGlitzer.Converters"
        mc:Ignorable="d" d:DesignWidth="350" d:DesignHeight="250" Width="350" Height="250"
        CanResize="True"
        x:Class="PokeGlitzer.HexEditor"
        Title="Pokemon Raw Editor">

  <Window.Resources>
    <local:HexEditorConverter x:Key="hexedit"/>
  </Window.Resources>

  <TextBox AcceptsReturn="True" TextWrapping="NoWrap" AcceptsTab="False"
           Text="{Binding Data, Converter={StaticResource hexedit}}" />
</Window>
