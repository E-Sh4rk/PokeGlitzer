<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokeGlitzer.Converters"
        mc:Ignorable="d" d:DesignWidth="410" d:DesignHeight="550"
        x:Class="PokeGlitzer.MainWindow"
        Title="PokeGlitzer">

  <Window.Resources>
    <local:ByteStringConverter x:Key="bsc"/>
    <local:SubstructureToColor x:Key="s2c"/>
    <local:SubstructureToText x:Key="s2t"/>
    <local:BoolToColor x:Key="b2c"/>
  </Window.Resources>
  
  <StackPanel Orientation="Vertical">
    <Button Command="{Binding OpenPokemonData}">Open Pokemon Data!</Button>
  </StackPanel>
  
</Window>
